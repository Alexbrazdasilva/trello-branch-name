{
  "manifest_version": 2,

  "name": "Trello branch name",
  "description": "This extension creates a git branch name from a Trello card and puts it in your paste buffer",
  "version": "1.1",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "background": {
    "page": "background.html"
  },

  "permissions": [
    "clipboardWrite",
    "tabs",
    "notifications",
    "*://trello.com/card/*"
  ],

  "options_page": "options.html",

  "page_action": {
    "default_title": "Trello branch name",
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    }
  }
}
